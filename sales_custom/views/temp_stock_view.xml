<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="temp_stock_form_view" model="ir.ui.view">
        <field name="name">temp.stock.form</field>
        <field name="model">temp.stock</field>
        <field name="arch" type="xml">
           <form string="Stock">
               <field name="reference" />
                <field name="name" />
                <field name="date" />
                <field name="location_id" />
                <field name="location_dest_id" />
                <field name="initial_stock" />
                <field name="stock_in"/>
                <field name="stock_out"/>
                <field name="mutation_in"/>
                <field name="mutation_out"/>
                <field name="final_stock"/>
                <field name="pending_stock"/>
           </form>
        </field>
    </record>

    <record id="temp_stock_view_tree" model="ir.ui.view">
        <field name="name">temp.stock.view.tree</field>
        <field name="model">temp.stock</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference" />
                <field name="name" />
                <field name="date" />
                <field name="location_id" />
                <field name="location_dest_id" />
                <field name="initial_stock" />
                <field name="stock_in"/>
                <field name="stock_out"/>
                <field name="mutation_in"/>
                <field name="mutation_out"/>
                <field name="final_stock"/>
                <field name="pending_stock"/>
            </tree>
        </field>
    </record>

    <record id="stock_move_action_report" model="ir.actions.act_window">
         <field name="name">Stock Move Report</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">temp.stock</field>
         <field name="view_mode">tree</field>
         <field name="view_id" ref="temp_stock_view_tree"/>
    </record>

    <menuitem id="menu_stock" name="Laporan Stock Data" parent="menu_rpb" action="stock_move_action_report" sequence="3"/>

<!--    <menuitem id="menu_stock_report" name="Laporan Stock Data" parent="menu_rpb" action="stock_move_report_action" sequence="3"/>-->
</odoo>
