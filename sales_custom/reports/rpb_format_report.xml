<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_rpb">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <div class="row" id="hash_header">
                                <div class="col-md-6">
                                    <br/>
                                    <h2>Hash Integrity Result - 28.11.1997</h2>
                                    <br/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6" id="hash_config_review">
                                    <br/>
                                    <h3>Configuration review</h3>
                                    <br/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-bordered" style="table-layout: fixed" id="hash_config_table">
                                        <thead style="display: table-row-group">
                                            <tr>
                                                <th class="text-center" style="width: 30%" scope="col">Name</th>
                                                <th class="text-center" style="width: 20%" scope="col">Address</th>
                                                <th class="text-center" style="width: 50%" scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="docs" t-as="doc">
                                                <tr>
                                                    <td>
                                                        [<span t-esc="123"/>] <span t-esc="doc.name"/>
                                                    </td>
                                                    <td class="text-center"><span t-esc="doc.alamat"/></td>
                                                    <td><span t-esc="doc.status"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
    </template>
</odoo>

