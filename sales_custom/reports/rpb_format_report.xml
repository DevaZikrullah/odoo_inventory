<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_rpb">
            <t t-foreach="docs" t-as="o">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div style="text-align: center;">
                    <h4>FORM RPB</h4>
                    <br></br>
                </div>
                <div class="page">
                    <div class="oe_structure" />
                    <div class="row">
                        <div class="col-8">
                            <h2>#<span t-field="o.name" /></h2>
                            <div id="informations" class="row">
                                <div class="d-flex col-5 bm-2">
                                    <div class="mr-1">
                                        <strong>Tanggal :</strong>
                                    </div>
                                    <div>
                                        <p t-field="o.delivery_date" class="m-0" />
                                    </div>
                                </div>
                            </div>
                            <div id="informations" class="row">
                                <div class="d-flex col-7 bm-2">
                                    <div class="mr-1">
                                        <strong>Mobil :</strong>
                                    </div>
                                    <div>
                                        <p t-field="o.vehicle_id" class="m-0" />
                                    </div>
                                </div>
                            </div>
                            <div id="informations" class="row">
                                <div class="d-flex col-7 bm-2">
                                    <div class="mr-1">
                                        <strong>Supir :</strong>
                                    </div>
                                    <div>
                                        <p t-field="o.driver_id" class="m-0" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_description"><strong>No</strong></th>
                                <th name="th_description"><strong>SO</strong></th>
                                <th name="th_description"><strong>Nama Toko</strong></th>
                                <th name="th_description"><strong>Kota</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="no" t-value="0" />
                            <t t-foreach="o.sale_id" t-as="line">
                                <t t-set="no" t-value="no+1" />
                                <tr>
                                    <td><span t-esc="no" /></td>
                                    <td><span t-esc="line.name" /></td>
                                    <td><span t-esc="line.partner_id.name" /></td>
                                    <td><span t-esc="line.partner_id.city" /></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br></br>
                    <br></br>
                    
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_description"><strong>No</strong></th>
                                <th name="th_description"><strong>Nama barang</strong></th>
                                <th name="th_description"><strong>Qty</strong></th>
                                <th name="th_description"><strong>DOS</strong></th>
                                <th name="th_description"><strong>CekList</strong></th>
                                <th name="th_description"><strong>Catatan</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="no" t-value="0" />
                            <t t-foreach="o.rpb_line_ids.filtered(lambda line: line.qty.id == 26)" t-as="line">
                                <t t-set="no" t-value="no+1" />
                                <tr>
                                    <td><span t-esc="no" /></td>
                                    <td><span t-esc="line.product_id.name" /></td>
                                    <td><span t-esc="line.done" /></td>
                                    <td><span t-esc="line.qty.id" /></td>
                                    <td/>
                                    <td/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br></br>
                    <br></br>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_description"><strong>No</strong></th>
                                <th name="th_description"><strong>Nama barang</strong></th>
                                <th name="th_description"><strong>Qty</strong></th>
                                <th name="th_description"><strong>PCS</strong></th>
                                <th name="th_description"><strong>CekList</strong></th>
                                <th name="th_description"><strong>Catatan</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="no" t-value="0" />
                            <t t-foreach="o.rpb_line_ids.filtered(lambda line: line.qty.id == 29)" t-as="line">
                                <t t-set="no" t-value="no+1" />
                                <tr>
                                    <td><span t-esc="no" /></td>
                                    <td><span t-esc="line.product_id.name" /></td>
                                    <td><span t-esc="line.done" /></td>
                                    <td><span t-esc="line.qty.name" /></td>
                                    <td/>
                                    <td/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br></br>
                    <hr/>
                    <!-- <div class="float-left"
                        style="width: 300px;                                                    padding: 5px;                                                    height: 175px;                                                    border: 1px solid black;                                                    margin: 10px;">
                        <p class="text-left">Catatan :</p>
                    </div> -->
                    
                    <div class="float-right"
                        style="width: 190px;                                                     padding: 5px;                                                    height: 175px;                                                     border: 1px solid black;                                                     margin: 10px;">
                        <p class="text-center">Admin Gudang</p>
                        <hr />
                        <br></br>
                        <br></br>
                        <p class="text-center">(..............................)</p>
                        <p class="text-center">Nama Jelas</p>
                    </div>
                    <div class="float-right"
                        style="width: 190px;                                                     padding: 5px;                                                     height: 175px;                                                     border: 1px solid black;                                                     margin: 10px;">
                        <p class="text-center">Supir</p>
                        <hr />
                        <br></br>
                        <br></br>
                        <p class="text-center">(..............................)</p>
                        <p class="text-center">Nama Jelas</p>
                    </div>
                    <div class="oe_structure" />
                </div>
            </t>
        </t>
    </t>
    </template>
</odoo>

