<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_so">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <div class="row">
                            <div class="col-8">
                                <h2>#<span t-field="o.origin" /></h2>
                                <div id="informations" class="row">
                                    <div class="d-flex col-5 bm-2">
                                        <div class="mr-1">
                                            <strong>Tanggal :</strong>
                                        </div>
                                        <div>
                                            <p t-field="o.date_deadline" class="m-0" />
                                        </div>
                                    </div>
                                </div>
                                <div id="informations" class="row">
                                    <div class="d-flex col-7 bm-2">
                                        <div class="mr-1">
                                            <strong>Customer :</strong>
                                        </div>
                                        <div>
                                            <p t-field="o.partner_id" class="m-0" />
                                        </div>
                                    </div>
                                </div>
                                <div id="informations" class="row">
                                    <div class="d-flex col-5 bm-2">
                                        <div class="mr-1">
                                            <strong>Tanggal :</strong>
                                        </div>
                                        <div>
                                            <p t-field="o.origin" class="m-0" />
                                        </div>
                                    </div>
                                </div>
                                <div id="informations" class="row">
                                    <div class="d-flex col-5 bm-2">
                                        <div class="mr-1">
                                            <strong>Total : </strong>
                                        </div>
                                        <div>
                                            <t t-set="no" t-value="0" />
                                            <t t-foreach="o.sale_id" t-as="line">
                                                <t t-esc="'{0:,.2f}'.format(int(line.amount_total))" />
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br></br>
                        <br></br>

                        <table class="table table-sm o_main_table">
                             <thead>
                                <tr>
                                    <th name="th_description"><strong>No</strong></th>
                                    <th name="th_description"><strong>Kode Barang</strong></th>
                                    <th name="th_description"><strong>Nama Barang</strong></th>
                                    <th name="th_description"><strong>Qty</strong></th>
                                    <th name="th_description"><strong>UOM</strong></th>
                                    <th name="th_description"><strong>Harga</strong></th>
                                    <th name="th_description"><strong>Total Harga</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="no" t-value="0" />
                                <t t-foreach="o.sale_id.order_line" t-as="line">
                                    <t t-set="no" t-value="no+1" />
                                    <tr>
                                        <td><span t-esc="no" /></td>
                                        <td><span t-esc="line.product_id.item_accurate_number" /></td>
                                        <td><span t-esc="line.name" /></td>
                                        <td><span t-esc="int(line.product_uom_qty)" /></td>
                                        <td><span t-esc="line.product_id.uom_id.name" /></td>
                                        <td><span t-esc="'{0:,.2f}'.format(int(line.price_unit))"/></td>
                                        <td><span t-esc="'{0:,.2f}'.format(int(line.price_subtotal))" /></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <br></br>
                        <br></br>
                        <div class="float-right"
                            style="width: 190px;                                                     padding: 5px;                                                    height: 175px;                                                     border: 1px solid black;                                                     margin: 10px;">
                            <p class="text-center">Admin Gudang</p>
                            <hr />
                            <br></br>
                            <br></br>
                            <p class="text-center">(..............................)</p>
                            <p class="text-center">Nama Jelas</p>
                        </div>
                        <div class="float-right"
                            style="width: 190px;                                                     padding: 5px;                                                     height: 175px;                                                     border: 1px solid black;                                                     margin: 10px;">
                            <p class="text-center">Pengirim</p>
                            <hr />
                            <br></br>
                            <br></br>
                            <p class="text-center">(..............................)</p>
                            <p class="text-center">Nama Jelas</p>
                        </div>
                        <div class="float-right"
                            style="width: 190px;                                                     padding: 5px;                                                     height: 175px;                                                     border: 1px solid black;                                                     margin: 10px;">
                            <p class="text-center">Penerima</p>
                            <hr />
                            <br></br>
                            <br></br>
                            <p class="text-center">(..............................)</p>
                            <p class="text-center">Nama Jelas</p>
                        </div>
                        <div class="oe_structure" />
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
